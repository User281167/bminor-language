{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "b-minor",
  "scopeName": "source.bminor",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#operators" },
    { "include": "#literals" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.bminor",
          "match": "\\b(if|else|while|for|return|function|print|auto|void)\\b"
        },
        {
          "name": "storage.type.bminor",
          "match": "\\b(integer|float|string|char|boolean|array)\\b"
        },
        {
          "name": "constant.language.boolean.bminor",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.bminor",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.bminor",
          "match": "(\\&\\&|\\`)"
        },
        {
          "name": "keyword.operator.arithmetic.bminor",
          "match": "(\\+\\+|--|\\+|\\-|\\*|\\/|%|\\^|=)"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "punctuation.brackets.bminor",
          "match": "[\\[\\]\\(\\)\\{\\}]"
        },
        {
          "name": "punctuation.separator.bminor",
          "match": "[:,;]"
        },
        {
          "name": "keyword.operator.bminor",
          "match": "!"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.bminor",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.bminor",
          "match": "\\\\[abefnrtv0'\"\\\\]|\\\\x[0-9a-fA-F]{2}"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.bminor",
          "match": "//.*$"
        },
        {
          "name": "comment.block.bminor",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": []
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.bminor",
          "match": "\\b\\d+\\.\\d*([eE][+-]?\\d+)?|\\.\\d+([eE][+-]?\\d+)?|\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.bminor",
          "match": "\\b\\d+\\b"
        }
      ]
    }
  }
}
